{
  "compilerOptions": {
    "target": "es6",                               
    "module": "commonjs",    
    "moduleResolution": "node",                         
    "baseUrl": "./src",
    "rootDir": "./src",  
    "lib": ["ES2023"],           
    "sourceMap": true,               
    "paths": {
      "@modules/*": ["./modules/*"],
      "@config/*": ["./config/*"],
      "@shared/*": ["./shared/*"],
      "@utils/*": ["./utils/*"]
    },     
    "esModuleInterop": true,                       
    "experimentalDecorators": true,             
    "emitDecoratorMetadata": true, 
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true,
    "outDir": "./dist",
    "preserveSymlinks": true
  },
  "include": [
    "src/**/*.ts"
  ]
}